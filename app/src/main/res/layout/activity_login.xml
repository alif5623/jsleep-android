<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#14141E"
    android:visibility="visible"
    tools:context=".LoginActivity"
    tools:visibility="visible">


    <EditText
        android:id="@+id/passwordTextBoxLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="101dp"
        android:layout_marginBottom="8dp"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColor="#FFFFFF"
        android:textColorHint="#4B1D70"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/loginButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/usernameTextBoxLogin"
        app:layout_constraintVertical_bias="0.093"
        tools:visibility="visible" />

    <EditText
        android:id="@+id/usernameTextBoxLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="101dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="100dp"
        android:ems="10"
        android:hint="Username"
        android:inputType="textEmailAddress"
        android:textColor="#FFFFFF"
        android:textColorHighlight="#FFFFFF"
        android:textColorHint="#4B1D70"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/subTitle" />

    <Button
        android:id="@+id/loginButton"
        android:layout_width="115dp"
        android:layout_height="56dp"
        android:layout_marginStart="162dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="162dp"
        android:backgroundTint="#9A2573"
        android:hint="Login"
        android:text="Login"
        android:textColor="#000000"
        android:textColorHighlight="#9C27B0"
        android:textStyle="bold"
        android:visibility="visible"
        app:iconTint="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/passwordTextBoxLogin" />

    <Button
        android:id="@+id/registerNow"
        android:layout_width="115dp"
        android:layout_height="56dp"
        android:layout_marginStart="162dp"
        android:layout_marginTop="104dp"
        android:layout_marginEnd="162dp"
        android:backgroundTint="#4B1D70"
        android:text="Register"
        android:textColor="#000000"
        android:textColorHighlight="#9C27B0"
        android:textStyle="bold"
        android:visibility="visible"
        app:iconTint="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/passwordTextBoxLogin" />

    <TextView
        android:id="@+id/dontHaveAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="143dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="144dp"
        android:text="Don't have account?"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#471EA8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loginButton" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:layout_marginTop="164dp"
        android:layout_marginEnd="132dp"
        android:rotation="-4"
        android:rotationX="0"
        android:rotationY="12"
        android:tint="#9A2573"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/editbox_background" />

    <TextView
        android:id="@+id/JTitle"
        android:layout_width="30dp"
        android:layout_height="69dp"
        android:layout_marginStart="144dp"
        android:layout_marginTop="100dp"
        android:text="J"
        android:textColor="#9A2573"
        android:textSize="58sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/subTitle"
        android:layout_width="38dp"
        android:layout_height="20dp"
        android:layout_marginTop="167dp"
        android:layout_marginEnd="130dp"
        android:rotation="-8"
        android:rotationX="0"
        android:rotationY="12"
        android:text="zzz.."
        android:textColor="#151A37"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/SleepTitle"
        android:layout_width="90dp"
        android:layout_height="41dp"
        android:layout_marginTop="128dp"
        android:layout_marginEnd="148dp"
        android:text="sleep"
        android:textColor="#9A2573"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>