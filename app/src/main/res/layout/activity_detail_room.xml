<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#14141E"
    android:theme="@style/Theme.MaterialComponents"
    tools:context=".CreateRoomActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardInput"
                android:layout_width="369dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                app:cardBackgroundColor="#14141E"
                app:cardCornerRadius="5dp"
                app:cardElevation="10dp"
                app:layout_constraintHorizontal_bias="0.482"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/detailRoomTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:text="Detail Room"
                    android:textAlignment="center"
                    android:textColor="#9A2573"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    app:layout_constraintHorizontal_bias="0.51"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/nameDetail"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="80dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/roundedtext"
                    android:backgroundTint="#4B1D70"
                    android:ems="10"
                    android:hint="Name"
                    android:inputType="textPersonName"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:textColor="#14141E"
                    android:textColorHint="#14141E"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    app:layout_constraintHorizontal_bias="0.496"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/priceDetail"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="140dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/roundedtext"
                    android:backgroundTint="#4B1D70"
                    android:ems="10"
                    android:hint="Price"
                    android:inputType="textPersonName"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:textColor="#14141E"
                    android:textColorHint="#14141E"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    app:layout_constraintHorizontal_bias="0.496"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/addressDetail"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="200dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/roundedtext"
                    android:backgroundTint="#4B1D70"
                    android:ems="10"
                    android:hint="Address"
                    android:inputType="textPersonName"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:textColor="#14141E"
                    android:textColorHint="#14141E"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    app:layout_constraintHorizontal_bias="0.496"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/sizeDetail"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="260dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/roundedtext"
                    android:backgroundTint="#4B1D70"
                    android:ems="10"
                    android:hint="Size"
                    android:inputType="textPersonName"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:textColor="#14141E"
                    android:textColorHint="#14141E"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    app:layout_constraintHorizontal_bias="0.496"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/cityDetail"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="320dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/roundedtext"
                    android:backgroundTint="#4B1D70"
                    android:ems="10"
                    android:hint="City"
                    android:inputType="textPersonName"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:textColor="#14141E"
                    android:textColorHint="#14141E"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    app:layout_constraintHorizontal_bias="0.496"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/bedDetail"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="380dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/roundedtext"
                    android:backgroundTint="#4B1D70"
                    android:ems="10"
                    android:hint="BedType"
                    android:inputType="textPersonName"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:textColor="#14141E"
                    android:textColorHint="#14141E"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    app:layout_constraintHorizontal_bias="0.496"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/facilityText"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="440dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginBottom="30dp"
                    android:text="List of Facilities"
                    android:textColor="#9A2573"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintHorizontal_bias="0.51"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/fromText"
                    android:visibility="invisible"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="33dp"
                    android:layout_marginTop="630dp"
                    android:text="From:"
                    android:textColor="#9A2573"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintHorizontal_bias="0.51"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/toText"
                    android:visibility="invisible"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="33dp"
                    android:layout_marginTop="680dp"
                    android:text="To:"
                    android:textColor="#9A2573"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintHorizontal_bias="0.51"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <CheckBox
                    android:id="@+id/bathtubDetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="490dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginBottom="30dp"
                    android:buttonTint="#9A2573"
                    android:clickable="false"
                    android:text="Bathtub"
                    android:textColor="#9A2573"
                    android:textColorHighlight="#9A2573"
                    android:textColorHint="#090101"
                    android:textColorLink="#008037"
                    android:textSize="18sp"
                    app:layout_constraintHorizontal_bias="0.51"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <CheckBox
                    android:id="@+id/acDetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="460dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginBottom="30dp"
                    android:buttonTint="#9A2573"
                    android:clickable="false"
                    android:text="AC"
                    android:textColor="#9A2573"
                    android:textColorHighlight="#008037"
                    android:textColorHint="#090101"
                    android:textColorLink="#008037"
                    android:textSize="18sp"
                    app:layout_constraintHorizontal_bias="0.51"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <CheckBox
                    android:id="@+id/wifiDetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="520dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginBottom="30dp"
                    android:buttonTint="#9A2573"
                    android:clickable="false"
                    android:text="WiFi"
                    android:textColor="#9A2573"
                    android:textColorHighlight="#008037"
                    android:textColorHint="#090101"
                    android:textColorLink="#008037"
                    android:textSize="18sp"
                    app:layout_constraintHorizontal_bias="0.51"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <CheckBox
                    android:id="@+id/balconyDetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="550dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginBottom="30dp"
                    android:buttonTint="#9A2573"
                    android:clickable="false"
                    android:text="Balcony"
                    android:textColor="#9A2573"
                    android:textColorHighlight="#008037"
                    android:textColorHint="#090101"
                    android:textColorLink="#008037"
                    android:textSize="18sp"
                    app:layout_constraintHorizontal_bias="0.51"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <CheckBox
                    android:id="@+id/restaurantDetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="170dp"
                    android:layout_marginTop="490dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginBottom="30dp"
                    android:buttonTint="#9A2573"
                    android:clickable="false"
                    android:text="Restaurant"
                    android:textColor="#9A2573"
                    android:textColorHighlight="#9A2573"
                    android:textColorHint="#090101"
                    android:textColorLink="#008037"
                    android:textSize="18sp"
                    app:layout_constraintHorizontal_bias="0.51"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <CheckBox
                    android:id="@+id/refrigeratorDetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="170dp"
                    android:layout_marginTop="460dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginBottom="30dp"
                    android:buttonTint="#9A2573"
                    android:clickable="false"
                    android:text="Refrigerator"
                    android:textColor="#9A2573"
                    android:textColorHighlight="#008037"
                    android:textColorHint="#090101"
                    android:textColorLink="#008037"
                    android:textSize="18sp"
                    app:layout_constraintHorizontal_bias="0.51"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <CheckBox
                    android:id="@+id/fitnessCenterDetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="170dp"
                    android:layout_marginTop="520dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginBottom="30dp"
                    android:buttonTint="#9A2573"
                    android:clickable="false"
                    android:text="Fitness Center"
                    android:textColor="#9A2573"
                    android:textColorHighlight="#008037"
                    android:textColorHint="#090101"
                    android:textColorLink="#008037"
                    android:textSize="18sp"
                    app:layout_constraintHorizontal_bias="0.51"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <CheckBox
                    android:id="@+id/swimming_poolDetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="170dp"
                    android:layout_marginTop="550dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginBottom="30dp"
                    android:buttonTint="#9A2573"
                    android:clickable="false"
                    android:text="Swimming Pool"
                    android:textColor="#9A2573"
                    android:textColorHighlight="#008037"
                    android:textColorHint="#090101"
                    android:textColorLink="#008037"
                    android:textSize="18sp"
                    app:layout_constraintHorizontal_bias="0.51"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <Button
                    android:id="@+id/bookButton"
                    android:layout_width="136dp"
                    android:layout_height="69dp"
                    android:layout_marginLeft="110dp"
                    android:layout_marginTop="610dp"
                    android:backgroundTint="#9A2573"
                    android:text="Book Room"
                    android:textColor="#14141E"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/bookButton2"
                    android:layout_width="136dp"
                    android:layout_height="69dp"
                    android:layout_marginLeft="110dp"
                    android:layout_marginTop="750dp"
                    android:backgroundTint="#9A2573"
                    android:visibility="invisible"
                    android:text="Book Now"
                    android:textColor="#14141E"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/fromDate"
                    style="?android:spinnerStyle"
                    android:layout_width="163dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="640dp"
                    android:backgroundTint="#9A2573"
                    android:onClick="openDatePicker"
                    android:text="2022-01-01"
                    android:textColor="#9A2573"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:visibility="invisible" />

                <Button
                    android:id="@+id/toDate"
                    style="?android:spinnerStyle"
                    android:layout_width="163dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="690dp"
                    android:backgroundTint="#9A2573"
                    android:onClick="openDatePicker"
                    android:text="2022-01-01"
                    android:textColor="#9A2573"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:visibility="invisible" />


            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>